{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm">
              <h1>New article</h1>
              <a class="btn btn-primary" href="{{path_for('articles')}}" role="button">
                <ion-icon name="arrow-undo-outline"></ion-icon> Back</a>
                <form method="post" action="{{path_for('image.add',{id: article.id})}}" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Example file input</label>
                        <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <ion-icon name="save-outline"></ion-icon> Save
                    </button>
                </form>
            </div>
            <div class="col-sm">
                <form method="put" action="">
                    <div class="form-group">
                      <label for="title">Title</label>
                      <input type="text" name="title" class="form-control" id="title" aria-describedby="titleHelp" placeholder="Enter title" value="{{ article.title}}">
                      <small id="titleHelp" class="form-text text-muted">Required Article title</small>
                    </div>
                    <div class="form-group">
                        <label for="description">Article description</label>
                        <input type="text" name="description" class="form-control" id="title" aria-describedby="descriptionHelp" placeholder="Enter description" value="{{ article.description}}">
                        <small id="descriptionHelp" class="form-text text-muted">Type short resume of article</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Article body</label>
                        <textarea name="body" class="form-control" id="exampleFormControlTextarea1" rows="10">{{ article.body}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <ion-icon name="save-outline"></ion-icon> Save
                    </button>
                  </form>
            </div>
          </div>
    </div>
{% endblock %}